<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.greenfam.sonicnews.WelcomeActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:civ_border_color="#ffffffff"
        android:layout_gravity="center_horizontal"
        app:civ_border_width="1.5dp"
        android:src="@drawable/balloon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_weight="1">

        <Button
            android:id="@+id/welcome_register_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/unactive_long_button_style"
            android:text="@string/register_link"/>

        <Button
            android:id="@+id/welcome_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/long_button_style"
            android:text="@string/action_sign_in"/>

    </LinearLayout>

</LinearLayout>